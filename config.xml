<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.ambrof.to"
        versionCode = "10"
        version     = "1.0.0">

    <name>Ofertas Amazon Brasil</name>

    <description>
        Com o app da Amazon, vocÃª encontra milhares de produtos, fica por dentro de todas as ofertas e acompanha seus pedidos em tempo real.
    </description>

    <author>Tadapp</author>

    <plugin name='cordova-plugin-splashscreen' />
    <plugin name='cordova-plugin-inappbrowser' />
    <plugin name='cordova-plugin-network-information' />

    <preference name='phonegap-version' value='cli-9.0.0' />

    <gap:plugin name='onesignal-cordova-plugin' spec='2.4.5' source='npm' />

    <preference name='android-build-tool' value='gradle' />
    <preference name="android-targetSdkVersion" value="29" />
    <preference name='orientation' value='portrait' />

    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenSpinnerColor" value="#000000" />

    <preference name="Fullscreen" value="false" />


    <platform name="android">
        <icon src="res/android/icon/ldpi_1606854575_59c4f3f56f47bec69e53.png" density="ldpi" />
        <icon src="res/android/icon/mdpi_1606854575_59c4f3f56f47bec69e53.png" density="mdpi" />
        <icon src="res/android/icon/hdpi_1606854575_59c4f3f56f47bec69e53.png" density="hdpi" />
        <icon src="res/android/icon/xhdpi_1606854575_59c4f3f56f47bec69e53.png" density="xhdpi" />
        <icon src="res/android/icon/xxhdpi_1606854575_59c4f3f56f47bec69e53.png" density="xxhdpi" />
        <icon src="res/android/icon/xxxhdpi_1606854575_59c4f3f56f47bec69e53.png" density="xxxhdpi" />

        <splash src="res/android/screen/hdpi_port_1606854764_93875a8c76066a355954.png" density="port-hdpi"/>
        <splash src="res/android/screen/ldpi_port_1606854764_93875a8c76066a355954.png" density="port-ldpi"/>
