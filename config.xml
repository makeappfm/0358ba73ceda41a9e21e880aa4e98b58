        <splash src="res/android/screen/xhdpi_port_1606854764_93875a8c76066a355954.png" density="port-xhdpi"/>
        <splash src="res/android/screen/hdpi_land_1606854764_93875a8c76066a355954.png" density="land-hdpi"/>
        <splash src="res/android/screen/ldpi_land_1606854764_93875a8c76066a355954.png" density="land-ldpi"/>
